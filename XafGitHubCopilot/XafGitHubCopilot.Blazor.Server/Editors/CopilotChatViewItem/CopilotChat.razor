@namespace XafGitHubCopilot.Blazor.Server.Editors.CopilotChatViewItem

@using DevExpress.AIIntegration.Blazor.Chat
@using DevExpress.Blazor
@using Microsoft.Extensions.AI
@using XafGitHubCopilot.Module.Services

<div class="copilot-chat-container">
    <DxAIChat CssClass="copilot-chat"
              UseStreaming="true"
              SizeMode="SizeMode.Medium"
              ResponseContentFormat="ResponseContentFormat.Markdown"
              >
        <PromptSuggestions>
            @foreach (var s in CopilotChatDefaults.PromptSuggestions)
            {
                <DxAIChatPromptSuggestion Title="@s.Title"
                                          Text="@s.Text"
                                          PromptMessage="@s.Prompt" />
            }
        </PromptSuggestions>
        <MessageContentTemplate>
            @ToHtml(context.Content)
        </MessageContentTemplate>
        <EmptyMessageAreaTemplate>
            <div class="copilot-empty-area">
                <div class="copilot-logo">&#x2728;</div>
                <h4>@CopilotChatDefaults.HeaderText</h4>
                <p>Ask me anything about your data &mdash; orders, invoices, products, employees &amp; more.<br />
                   Powered by GitHub Copilot SDK.</p>
            </div>
        </EmptyMessageAreaTemplate>
    </DxAIChat>
</div>

@code {
    MarkupString ToHtml(string markdown)
        => new(CopilotChatDefaults.ConvertMarkdownToHtml(markdown));
}

<style>
    .copilot-chat-container {
        width: 100%;
        height: calc(100vh - 45px);
        display: flex;
        flex-direction: column;
    }

    .copilot-empty-area {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        color: #666;
        text-align: center;
        padding: 2rem;
    }

    .copilot-logo {
        font-size: 3rem;
        margin-bottom: 0.5rem;
    }

    .copilot-empty-area h4 {
        margin-bottom: 8px;
        font-size: 1.25rem;
    }

    .copilot-empty-area p {
        max-width: 480px;
        line-height: 1.5;
    }

    .copilot-chat {
        flex: 1;
        height: 100%;
        min-height: 0;
    }

    /* ── Markdown table styling ──────────────────────────────── */
    .copilot-chat table {
        border-collapse: collapse;
        width: 100%;
        margin: 0.75rem 0;
        font-size: 0.9rem;
    }

    .copilot-chat th,
    .copilot-chat td {
        border: 1px solid #ddd;
        padding: 8px 12px;
        text-align: left;
    }

    .copilot-chat th {
        background-color: #f5f5f5;
        font-weight: 600;
    }

    .copilot-chat tr:nth-child(even) {
        background-color: #fafafa;
    }

    .copilot-chat tr:hover {
        background-color: #f0f0f0;
    }

    /* ── Code block styling ──────────────────────────────────── */
    .copilot-chat pre {
        background-color: #f5f5f5;
        border-radius: 6px;
        padding: 12px;
        overflow-x: auto;
    }

    .copilot-chat code {
        font-family: 'Cascadia Code', 'Consolas', monospace;
        font-size: 0.85em;
    }
</style>
